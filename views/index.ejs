<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin page</title>
    <!-- material icon -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp"
      rel="stylesheet"
    />
    <!-- custom style sheet -->
    <link rel="stylesheet" href="./index.css" />
    <!-- javascript file -->
    <script src="./index.js" defer></script>
  </head>
  <body class = ".dark-theme-variables">
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <img src="./images/logo.png" />
            <h2>Robotics Club</h2>
          </div>
          <div class="close" id="close-btn">
            <span class="material-icons-sharp"> close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="#" class="active">
            <span class="material-icons-sharp"> dashboard </span>
            <h3>Dashboard</h3>
          </a>
          <a href="/addmember">
            <span class="material-icons-sharp"> person_add </span>
            <h3>Add members</h3>
          </a>
          <a href="/removemember">
            <span class="material-icons-sharp"> person_remove </span>
            <h3>Remove members</h3>
          </a>
          <a href="/memberlist">
            <span class="material-icons-sharp"> groups </span>
            <h3>Members list</h3>
            <span class="members-count"><%=memberCount%></span>
          </a>
          <a href="#">
            <span class="material-icons-sharp"> logout </span>
            <h3>Logout</h3>
          </a>
        </div>
      </aside>

      <!------------------ END OF ASIDE ----------------------->

      <main>
        <h1>Dashboard</h1>

        <div class="dates">
          <h3><%=date%></h3>
        </div>
        <div class="insights">
          <div class="in">
            <span class="material-icons-sharp"> person_outline </span>
            <div class="middle">
              <div class="left">
                <h3>Inside</h3>
                <h1><%=inside%></h1>
              </div>
              <!-- <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>81%</p>
                </div>
              </div> -->
            </div>
            <small class="text-muted">Last updated ..... <%=lastUpdatedInside%></small>
          </div>
          <!----------------End of In------------------>
          <div class="till-now">
            <span class="material-icons-sharp"> person_outline </span>
            <div class="middle">
              <div class="left">
                <h3>Members</h3>
                <h1><%=memberCount%></h1>
              </div>
              <!-- <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>62%</p>
                </div>
              </div> -->
            </div>
            <small class="text-muted">Last updated ..... <%=lastUpdatedMember%></small>
          </div>
          <!----------------End of till-now------------------>
          <div class="active-members">
            <span class="material-icons-sharp"> person_outline </span>
            <div class="middle">
              <div class="left">
                <h3>Total visits</h3>
                <h1><%=visits%></h1>
              </div>
              <!-- <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>31%</p>
                </div>
              </div> -->
            </div>
            <small class="text-muted">Last updated ..... <%=lastUpdatedInside%></small>
          </div>
          <!----------------End of active-members ------------------>
        </div>

        <!------------------ End of Insights ------------------------>

        <div class="recent-logins">
          <h2>Recent Entries</h2>
          <table class="table">
            <thead>
              <tr class="table-contents">
                <th>Name</th>
                <th>Roll No</th>
                <th>Club ID</th>
                <th>In-time</th>
                <th>Out-time</th>
              </tr>
            </thead>
            <tbody>

            </tbody>
              <%for (var i = 0; i<5; i++){%>
                  <tr class="table-contents">
                    <td><%=logs[i].name%></td>
                    <td><%=logs[i].rollNumber%></td>
                    <td><%=logs[i].clubId%></td>
                    <td class="primary"><%=logs[i].inTime%></td>
                    <td class="warning"><%=logs[i].outTime%></td>
                  </tr>
              <%}%>

          </table>
        </div>
      </main>

      <!-------------------END OF MAIN------------------------>

      <div class="right">

          <div class="top">
            <button id = 'menu-btn'>
              <span class="material-icons-sharp">
                menu
                </span>
            </button>

            <div class="details">
              <p>Hey, <b>Niranjan</b> </p>
              <small class = "text-muted">Admin</small >
            </div>
            <div class="profile-photo">
              <img src="./images/profile-1.jpeg" alt="">
            </div>
          </div>

          <!----------------End of Top-------------------------->
          <div class="recent-updates">
            <h2>Recent Updates</h3>
              <div class="update-box">

                <%for (var i= 0; i<7; i++){%>
                  <div class="update">
                    <div class="profile-photo">
                      <img src="./images/profile-2.jpg" alt="">
                    </div>
                    <div class="message">
                      <p><b><%=updates[i].name%> </b> <%=updates[i].activity%></p>
                      <small class="text-muted"><%=updates[i].time%></small>
                    </div>
                  </div>
                <%}%>


              <!--------------------End of Recent updates------------------>

          </div>
      </div>

    </div>


  </body>
</html>
